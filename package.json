{
  "name": "nodejs-backend-template",
  "version": "1.0.0",
  "main": "index.ts",
  "contributors": [
    {
      "name": "Tomoki Shigeta"
    }
  ],
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "postinstall": "husky install",
    "test": "jest --coverage",
    "test:reporter": "yarn jest --ci",
    "test:generate": "ts-node autoGenerateTests.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format:write": "prettier . --write",
    "api-docs": "yarn api-docs:build && yarn api-docs:validate && yarn api-docs:copy-to-build",
    "api-docs:build": "yarn swagger-cli bundle api-docs/openapi.yaml --outfile api-docs/_openapi.json --type json",
    "api-docs:copy-to-build": "if not exist _build\\api-docs mkdir _build\\api-docs && xcopy /Y api-docs\\_openapi.json _build\\api-docs\\",
    "api-docs:validate": "yarn openapi-generator-cli validate -i api-docs/_openapi.json",
    "build": "tsc && yarn api-docs",
    "start:dev": "nodemon index.ts",
    "start": "yarn build && node _build/index.js",
    "image:remove": "./docker/script/remove-images.sh",
    "container:start": "./docker/script/start-containers.sh",
    "container:start:rebuild": "yarn image:remove && yarn container:start",
    "typeorm-cli": "node --experimental-specifier-resolution=node --loader ts-node/esm ./node_modules/typeorm/cli -f ./src/infrastructure/orm/typeorm/config/ormconfig.ts"
  },
  "dependencies": {
    "@azure/identity": "3.1.3",
    "@azure/keyvault-secrets": "4.6.0",
    "@openapitools/openapi-generator-cli": "^2.6.0",
    "@tsconfig/node-lts-strictest": "^18.12.1",
    "async-retry": "1.3.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "express": "4.17.1",
    "fp-ts": "2.10.5",
    "mysql2": "2.2.5",
    "openai": "^4.82.0",
    "reflect-metadata": "0.1.13",
    "swagger-ui-express": "4.1.6",
    "typeorm": "0.2.31",
    "zod": "^3.22.3"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.25.9",
    "@babel/preset-env": "7.13.10",
    "@babel/preset-typescript": "^7.26.0",
    "@tsconfig/node-lts-strictest-esm": "^18.12.1",
    "@types/async-retry": "1.4.2",
    "@types/cors": "^2.8.10",
    "@types/express": "4.17.11",
    "@types/jest": "26.0.20",
    "@types/node": "14.14.33",
    "@types/swagger-ui-express": "4.1.2",
    "@typescript-eslint/eslint-plugin": "4.17.0",
    "@typescript-eslint/parser": "4.17.0",
    "dotenv": "^16.4.1",
    "eslint": "7.21.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-prettier": "3.3.1",
    "husky": "6.0.0",
    "jest": "26.6.3",
    "jest-junit": "12.0.0",
    "lint-staged": "^13.1.2",
    "nodemon": "2.0.7",
    "prettier": "2.2.1",
    "swagger-cli": "^4.0.4",
    "ts-node": "^10.9.1",
    "typescript": "4.9.5"
  }
}
